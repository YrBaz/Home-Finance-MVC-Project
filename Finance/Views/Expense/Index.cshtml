@model IEnumerable<Finance.Models.Expense>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-white-50">Expenses</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-square"></i> &nbsp Add Expense</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-striped text-white-50">
            <thead>
                <tr>
                    <th>
                        Expense
                    </th>
                    <th>
                        Value
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Date
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expense in Model)
                {
                <tr>
                    <td width="25%">@expense.Name</td>
                    <td width="25%">@expense.Value</td>
                    <td width="25%">@expense.ExpenseCategory.Name</td>
                    <td width="25%">@expense.CreatedDate</td>
                    <td width="25%">
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="Expense" asp-action="Edit" asp-route-Id="@expense.Id" class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
            
        </table> 
        <div class="container p-3 text-white-50">
            <p2>Total @Model.Sum(e => e.Value)</p2>
        </div>
    }
    else
    {
        <p class="text-white-50">No items created yet</p>
    }

</div>