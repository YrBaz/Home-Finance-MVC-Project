@model IEnumerable<Finance.Models.ExpenseCategory>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3 text-white-50">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-white-50">Expense Categories</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseCategory" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-square"></i> &nbsp Add Category</a>
        </div>
    </div>
</div>
    <br />
    @if(Model.Count() > 0)
    {
        <table class="table table-striped text-white-50">
            <thead>
                <tr>
                    <th>
                        Expense Categories
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expensecategory in Model)
                {
                <tr>
                    <td width="25%">@expensecategory.Name</td>
                    <td width="25%">
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="ExpenseCategory" asp-action="Edit" asp-route-Id="@expensecategory.Id" class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="ExpenseCategory" asp-action="Delete" asp-route-Id="@expensecategory.Id" class="btn btn-danger mx-1"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
            
        </table>
    }
    else
    {
        <p>No categories created yet</p>
    }